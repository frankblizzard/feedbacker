<%= simple_form_for @user do |f| %>
	<%= f.input :name %>
	<%= f.association :client, :label => "Company" %>
	<%= f.input :email %>
	<%= f.input :password %>
	<%= f.input :password_confirmation %>	
	<%= f.input :admin %>
	<%= f.input :project_manager %>
    <%= f.submit (@user.new_record? ? "Sign up" : "Update") %>
<% end %>
