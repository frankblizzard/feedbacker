<%= simple_form_for @person do |f| %>
  <%= f.error_messages %>

  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :street %>
  <%= f.input :city %>
  <%= f.input :zipcode %>
  <%= f.input :birthday, :as => :date, :start_year => Date.today.year - 90, :end_year => Date.today.year - 10, :order => [:day, :month, :year] %>
  <%= f.input :phone %>
  <%= f.association :client, :collection => Client.all(:order => 'name'), :prompt => "Choose a Company" %>
  <%= f.button :submit %>
<% end %>

