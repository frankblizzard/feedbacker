<% title "People" %>

<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Street</th>
    <th>City</th>
    <th>Zipcode</th>
    <th>Birthday</th>
    <th>Phone</th>
    <th>Avatar</th>
    <th>Country</th>
  </tr>
  <% for person in @people %>
    <tr>
      <td><%= person.first_name %></td>
      <td><%= person.last_name %></td>
      <td><%= person.street %></td>
      <td><%= person.city %></td>
      <td><%= person.zipcode %></td>
      <td><%= person.birthday %></td>
      <td><%= person.phone %></td>
      <td><%= person.avatar %></td>
      <td><%= person.country_id %></td>
      <td><%= link_to "Show", person %></td>
      <td><%= link_to "Edit", edit_person_path(person) %></td>
      <td><%= link_to "Destroy", person, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Person", new_person_path(person) %></p>
