<%= form_for @hour do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </p>
  <p>
    <%= f.label :amount %><br />
    <%= f.text_field :amount %> hours
  </p>
  <p>
    <%= f.label :task %><br />
    <%= f.text_area :task %>
  </p>
  <p>

    <%= f.check_box :extra %>    <%= f.label :extra %>
  </p>
  <p>
    <%= f.check_box :holiday %>    <%= f.label :holiday %>
  </p>
  <p> 
	<%= f.hidden_field :user_id, :value => current_user.id %>
  </p>
  <p>
    <%= f.label :project %><br />
    <%= collection_select(:hour, :project_id, Project.all, :id, :name, :prompt => true) %>
  </p>
  <p>
    <%= f.label :work_category %><br />
<%= collection_select(:hour, :work_category_id, WorkCategory.all, :id, :name, :prompt => true) %>
  </p>
  <p><%= f.submit %></p>
<% end %>
