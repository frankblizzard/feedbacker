<% title "Projekt: #{@project.name}" %>


<table>
	<tr>
		<th>Project start</th>
		<th>Deadline (Project End)</th>
	</tr>
	<tr>
		<td><%= @project.started_at.to_formatted_s(:long) %></td>
		<td><%= @project.ends_at.to_formatted_s(:long) %></td>
	</tr>
</table>
<br/>  
<table>
	<tr>
		<th>Currently involved users</th>
	</tr>
	<tr>
		<td><ul>
		<% for user in @project.users do %>
			<li><%= link_to "#{user.username}", user %></li>			
		<% end %>
		</ul></td>
	</tr>
</table>
<br/> 
<table class="project_image_table">
	<tr>
		<th>Project Images</th>
	</tr>
	<tr>
		<td>
		<% for image in @project.images do %>
			<%= link_to image_tag(image.rendering.url(:thumb), :border => 0), image %>
		<% end %>
		</td>
	</tr>
</table>
<br/>
<p>
  <%= link_to "Edit", edit_project_path(@project) %> |
  <%= link_to "Delete Project", @project, :confirm => 'Are you sure?', :method => :destroy %> |
  <%= link_to "All Projects", projects_path %>
</p>
                         
<br/>
<br/>
<p>
	<%= link_to "go back", :back %>
</p>