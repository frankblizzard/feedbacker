<% title "Projects" %>

<table>
  <tr>
    <th><%= sortable  "Name"%></th>
    <th><%= sortable  "started_at", "Started"%></th>
    <th><%= sortable  "ends_at", "Deadline"%></th>
    <th>Description</th>
  </tr>
  <% for project in @projects %>
    <tr class="<%= cycle('white','grey')-%>">
      <td><%= project.name %></td>
      <td><%= project.started_at  %></td>
      <td><%= project.ends_at  %></td>
      <td><%= sanitize project.description %></td>
      <td><%= link_to "Show", project %></td>
      <td><%= link_to "Edit", edit_project_path(project) %></td>     
	  <% if current_user.admin? %>
      <td><%= link_to "Destroy", project, :confirm => 'Are you sure?', :method => :delete %></td>
	  <% end %>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Project", new_project_path(project) %></p>
