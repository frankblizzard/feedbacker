<% title "Client: #{@client.name}", false %>


<div class="client">
	<div style="clear:both; width: 100%; height: 80px;">
		<span class="image">  <%= image_tag "client.png" %> </span>
		<span class="name">  <%= @client.name %> </span>
	</div>
	<div class="clear"></div>
	<p><i>  <%= @client.full_name %> 
		
		<% if @client.web %>
		 (<a href="http://<%= @client.web %>" target="_blank"><%= @client.web %></a>)
		<% end %>
	</i></p>

	<br/>
	<div class="contacts">
	  <strong>Contacts:</strong>
		
		<% if @client.people.size > 0 %>
	
	      <ul>
	      <% for person in @client.people %>
	      	<li><%= link_to person.full_name, person %></li>
	      <% end %>
	      </ul>
		<% else %>
		   <p>none yet</p>
		<% end %>
	      <span class="add" title="add contact"><%= link_to image_tag("user_add.png", :border => 0 ), :controller => :people, :action => :new, :client => @client.id %> </span>
	</div>
	
	<div class="projects">
	  <strong>Projects:</strong>
		<ul>
		<% for project in @client.projects.visible %>
			<li><%= link_to project.name_number, project %></li>
	    <% end %>
		</ul>
	</div>

</div>





<p>
  <%= link_to "Edit", edit_client_path(@client) %> |
  <% if current_user.admin? %>
  <%= link_to "Delete Client", @client, :confirm => 'Are you sure?', :method => :delete %> |
  <% end %>
  <%= link_to "View All", clients_path %>
</p>
